<% layout('../layout/layout') -%>
<!-- Main content -->
<section class="content" ng-controller="ctrl">
  <style type="text/css">
    .select2-results__option .wrap:before{
    font-family:fontAwesome;
    color:#999;
    content:"\f096";
    width:25px;
    height:25px;
    padding-right: 10px;
    
}
.select2-results__option[aria-selected=true] .wrap:before{
    content:"\f14a";
}

/* not required css */

.select2-multiple, .select2-multiple2
{
  width: 50%
}
    </style>
    <div class="box box-primary">
      <form id="addUserForm" ng-submit="submit()">
        <div class="box-body">

          <div class="form-group">
            <label>Full name</label>
            <input class="form-control" placeholder="Full name" name="fullname" ng-model="formData.fullname" required>
          </div>

          <div class="form-group">
            <label>Employee id</label>
            <input class="form-control" placeholder="Employee id" name="employeeId" ng-model="formData.employeeId" required>
          </div>

          <div class="form-group">
            <label>Email address</label>
            <input class="form-control" placeholder="Email address" name="email" ng-model="formData.email" type="email" required>
          </div>

          <div class="form-group" ng-hide="editMode">
            <label>Password</label>
            <input class="form-control" placeholder="Password" type="password" name="password" ng-model="formData.password" required>
          </div>

          <div class="form-group">
            <label>User Type</label>
            <select id="userType" class="form-control" name="userType" ng-model="formData.userType" required>
              <option ng-repeat="userType in userTypes" value="{{ userType.userType }}">{{ toUcFirst(userType.userType) }}</option>
            </select>
          </div>

          <div class="form-group" id="projectCodeSection" ng-show="formData.userType == 'co-ordinator' || formData.userType == 'site-engineer'">
            <label>Project Code</label>
            <select  id="projectCodeList" class="form-control" name="projectCode" required>
              <option  value="{{defaultProjectCode._id}}">{{defaultProjectCode.name}}</option>
            </select>
          </div>

          <div class="form-group" ng-show="formData.userType == 'manager'">
            <label>Department</label>
            <select class="form-control" id="department" name="department" ng-model="formData.department" required>
              <option ng-repeat="department in departments"  value="{{department._id}}">{{department.name}}</option>
            </select>
          </div>

          <div class="form-group" ng-show="formData.userType == 'co-ordinator'">
            <label>Project Type</label>
            <select class="form-control" id="projectType" name="projectType" ng-model="formData.projectType" required>
              <option ng-repeat="projectType in projectTypes"  value="{{projectType._id}}">{{projectType.name}}</option>
            </select>
          </div>
          <div class="form-group" ng-show="formData.userType == 'co-ordinator'">
              <label>Operator</label>
              <select class="form-control" id="operator" name="operator" multiple required>
                <option ng-repeat="operator in operators"  value="{{operator._id}}">{{operator.name}}</option>
              </select>
            </div>

            
            <!-- <div class="form-group" ng-show="formData.userType == 'co-ordinator'">
                <label>Operator</label>
                <select multiple style="width: 300px;" class="form-control" id="operator1" name="operator" ng-model="formData.operatorId" required>
                    <optgroup label="Select Operator">
                       <option ng-repeat="operator in operators"  value="{{operator._id}}">{{operator.name}}</option>
                    </optgroup>
                </select>
              </div> -->
              <div class="form-group">
                  <label>Salary</label>
                  <input class="form-control" placeholder="Salary" name="salary" ng-model="formData.salary" required>
                </div>
             <div class="form-group">
            <label>Lat</label>
            <input class="form-control" placeholder="Lat" name="lat" ng-model="formData.lat" required>
          </div>

          <div class="form-group">
            <label>Long</label>
            <input class="form-control" placeholder="Long" name="long" ng-model="formData.long" required>
          </div>

          <div class="form-group">
            <label>Address</label>
            <textarea class="form-control" placeholder="Address" name="address" ng-model="formData.address" required></textarea>
          </div>

          <div class="form-group">
            <label>City</label>
            <input class="form-control" placeholder="City" name="city" ng-model="formData.city" required>
          </div>

          <div class="form-group">
            <label>State</label>
            <input class="form-control" placeholder="State" name="state" ng-model="formData.state" required>
          </div>

          <div class="form-group">
            <label>Pincode</label>
            <input class="form-control" placeholder="Pincode" name="pincode" ng-model="formData.pincode" required>
          </div>

          <div class="form-group">
            <label>Phone</label>
            <input class="form-control" placeholder="Phone" name="phone" ng-model="formData.phone" required>
          </div>
        </div>
        <!-- /.box-body -->

        <div class="box-footer">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
</section>

<link rel="stylesheet" href="/admin/css/select2.css">
<script src="/admin/js/select2.full.js"></script>
<script src="/admin/js/user/add.js"></script>


        <div class="circleClients">
            <!-- <h2>Client report</h2> -->
            <table class="mainTable">
                <tr>
                    <td class="ccm1"><strong>Vendor Type</strong></td>
                    <td class="ccm1"><strong>Vendor Name</strong></td>
                    <td class="ccm1"><strong>Client Name</strong></td>
                    <td class="ccm1"><strong>Circle Name</strong></td>
                    <td class="ccm1"><strong>Activity</strong></td>
                    <td class="ccm1"><strong>Total Amount</strong></td>
                   </tr>
                <tbody class="tbodyBorder">
                    <tr ng-repeat="vendor in vendors" ng-init="count = 1;">
                        <td class="ccm1" rowspan='{{ count }}' ><strong>{{ vendor.vendorType }}</strong></td>
                        <td class="ccm1" rowspan='{{ count }}' >{{ vendor.vendorName }}</td>
                        <td class="ccm1" rowspan='{{ count }}' >{{ vendor.clientName }}</td>
                        <td class="ccm1" rowspan='{{ count }}' >{{ vendor.circleName }}</td>
                        <td class="ccm1" rowspan='{{ count }}' >{{ vendor.activityName }}</td>
                        <td class="ccm1">{{ vendor.totalAmount }}</td>
                    </tr>
                </tbody>

<% layout('../layout/layout') -%>
<!-- Main content -->
<section class="content" ng-controller="ctrl">
    <div class="box box-primary">
        <table class="table">
            <thead>
                <th>Name</th>
                <th>Description</th>
                <th>Code</th>
                <th>Action</th>
            </thead>
            <tbody>
                <tr ng-repeat="region in regions" ng-hide="hideRegion(region._id)">
                    <td>{{ region.name }}</td>
                    <td>{{ region.description }}</td>
                    <td>{{ region.code }}</td>
                    <td>
                        <a class="btn btn-info" href="/edit-region?regionId={{ region._id }}">Edit</a>
                        <a class="btn btn-danger" ng-click="deleteRegion(region._id)">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
</section>

<script src="/admin/js/region/view.js"></script>
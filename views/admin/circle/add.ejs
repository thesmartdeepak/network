<% layout('../layout/layout') -%>
<!-- Main content -->
<section class="content" ng-controller="ctrl">
    <div class="box box-primary">
      <form id="addCircleForm" ng-submit="submit()">
        <div class="box-body">

          <div class="form-group">
            <label>Client</label>
            <select   id="clintList" class="form-control" name="clientId" required>
              <option value="{{defaultClient._id}}">{{defaultClient.name}}</option>
            </select>
          </div>

          <div class="form-group">
            <label>Name</label>
            <input class="form-control" placeholder="Name" name="name" ng-model="formData.name" required>
          </div>

          <div class="form-group">
            <label>Description</label>
            <input class="form-control" placeholder="Description" name="description" ng-model="formData.description" required>
          </div>

          <div class="form-group">
            <label>Code</label>
            <input class="form-control" placeholder="Code" name="code" ng-model="formData.code" required>
          </div>

          <div class="form-group">
            <label>Region</label>
            <select class="form-control" name="regionId" ng-model="formData.regionId" required>
                <option value="">--Select Region--</option>
              <option ng-repeat="region in regions" value="{{ region._id }}">{{ region.name }}</option>
            </select>
          </div>
        <!-- /.box-body -->

        <div class="box-footer">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
</section>

<link rel="stylesheet" href="/admin/css/select2.css">
<script src="/admin/js/select2.full.js"></script>
<script src="/admin/js/circle/add.js"></script>